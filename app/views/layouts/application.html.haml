!!! html
%html(lang="en")
  %head
    %title UofTIronSports
    %meta(name="viewport" contant="width=device-width, initial-scale=1.0")
    = stylesheet_link_tag "application", media: 'all'
    = csrf_meta_tags
  %body
    .container
      .row
        %header
          %hgroup.logo.span2
            %a(href="/")
              = image_tag 'logo.jpg'
          %nav.row.span10.navbar.topnav
            %ul.nav.nav-pills
              %li= link_to 'Facebook', "http://facebook.com/UofTIronsports"
              %li= link_to 'Twitter', "http://twitter.com/UofTIronsports"
              %li= link_to 'Flickr', root_url
              %li= link_to 'YouTube', "http://youtube.com/user/UofTIronsports"
              %li= link_to 'Mailing List', "http://eepurl.com/oqcN1"
              - if not user_signed_in?
                %li= link_to 'Sign Up', new_user_registration_path
                %li.dropdown
                  %a(class="dropdown-toggle" data-target='#' href='/' data-toggle="dropdown")
                    Sign In <b class="caret"></b>
                  %ul.dropdown-menu
                    %li
                      = form_tag user_session_path, method: :post do
                        = label_tag :user_email, 'Email'
                        = email_field_tag 'user[email]'
                        = label_tag :user_password, 'Password'
                        = password_field_tag 'user[password]'
                        = button_tag type: 'submit', class: 'btn btn-inverse' do
                          Log In
              - else
                %li.dropdown
                  %a(class="dropdown-toggle big" data-target='#' href="/" data-toggle="dropdown")
                    Account <b class="caret"></b>
                  %ul.dropdown-menu(role="menu")
                    %li=  link_to 'View Profile', user_path(current_user)
                    %li= link_to 'Manage Account', edit_user_registration_path
                    %li
                      = form_tag destroy_user_session_path, method: :delete do
                        = button_tag type: 'submit', class: 'btn btn-inverse' do
                          Sign Out
          %nav.row.span10.navbar.bottomnav
            %ul.nav.nav-pills
              %li{class: request.path == posts_path ? 'active' : ''}= link_to 'News', posts_path
              %li{class: request.path == about_path ? 'active' : ''}= link_to 'About', about_path
              %li{class: request.path == media_path ? 'active' : ''}= link_to 'Media', media_path
              %li{class: request.path == calendar_path ? 'active' : ''}= link_to 'Calendar', calendar_path
              %li{class: request.path == leaderboard_path ? 'active' : ''}= link_to 'Leaderboard', leaderboard_path
              %li{class: request.path == contact_path ? 'active' : ''}= link_to 'Contact', contact_path

      %section.notify.row.span8.offset2
        = bootstrap_flash

      .row
        %section#sidebar.span2
          = render 'shared/sidebar'

        %section#main.span10
          = yield
    = javascript_include_tag "application"
