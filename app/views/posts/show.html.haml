.post
  %hgroup
    %h2= link_to @post.title, @post
    %h3.quiet
      = @post.published
      - if can? :edit, @post
        = link_to '(edit)', edit_post_path(@post)
      -if can? :destroy, @post
        = link_to 'Destroy', @post, confirm: 'Delete Post?', method: :delete
  .post-body
    :markdown
      #{@post.content}

= link_to 'Back', posts_path
