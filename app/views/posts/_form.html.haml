= form_for @post do |f|
  -if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .span2
    .row
      .field
        = f.label :title
        = f.text_field :title
    .row
      .field
        = f.label :published
        = f.datetime_select :published
    .row
      .actions
        = f.submit 'Save', class: 'btn btn-primary'
  .span7
    .field
      = f.label :content
      = f.text_area :content
